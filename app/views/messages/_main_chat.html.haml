.chat-main
  .chat-main__group-info
    .chat-main__group-info__name
      .chat-main__group-info__group-name
        = @group.name
      .chat-main__group-info__group-name-list
        Member :
        - @group.users.each do |user|
          = user.name
    = link_to  edit_group_path(@group) do
      .chat-main__group-info__btn
        Edit

  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message], html: {class: "chat-main__message-form__comment"} do |f|
      = f.text_field :body, class: 'form-text', placeholder: 'type a message'
      .chat-main__message-form__comment__image
        = f.label :image, class: 'image', for: "images" do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden', id: "images"
      = f.submit 'Send', class: 'form-btn'

